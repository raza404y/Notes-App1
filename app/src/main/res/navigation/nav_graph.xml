<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.blinklab.notesapp.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_readAndFormatNote"
            app:destination="@id/readAndFormatNote" />
        <action
            android:id="@+id/action_homeFragment_to_likeFragment"
            app:destination="@id/likeFragment" />
    </fragment>
    <fragment
        android:id="@+id/readAndFormatNote"
        android:name="com.blinklab.notesapp.fragments.ReadAndFormatNote"
        android:label="fragment_add_note"
        tools:layout="@layout/fragment_read_and_format_note" >
        <argument
            android:name="myNotes"
            app:argType="com.blinklab.notesapp.models.NotesModel" />
    </fragment>
    <fragment
        android:id="@+id/likeFragment"
        android:name="com.blinklab.notesapp.fragments.LikeFragment"
        android:label="fragment_like"
        tools:layout="@layout/fragment_like" />
</navigation>